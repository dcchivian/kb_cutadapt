{
    "ver": "1.0.7",
    "contact": "http://kbase.us/contact-us/",
    "authors": [ "msneddon", "dylan", "qzhang" ],
    "visible" : true,
    "categories": ["active","reads"],

    "widgets": {
        "input": null,
        "output": "no-display"
    },

    "parameters": [ 
        {
            "id": "input_reads",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": null,
            "field_type": "text",
            "text_options": {
                "valid_ws_types": [
                    "KBaseFile.PairedEndLibrary",
                    "KBaseFile.SingleEndLibrary",
                    "KBaseAssembly.PairedEndLibrary",
                    "KBaseAssembly.SingleEndLibrary",
                    "KBaseRNASeq.RNASeqSampleSet",
                    "KBaseSets.ReadsSet"
                ]
            }
        },
        {
            "id": "output_object_name",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": null,
            "field_type": "text",
            "text_options": {
                "is_output_name": true,
                "valid_ws_types": [
                    "KBaseFile.PairedEndLibrary",
                    "KBaseFile.SingleEndLibrary",
                    "KBaseAssembly.PairedEndLibrary",
                    "KBaseAssembly.SingleEndLibrary",
                    "KBaseRNASeq.RNASeqSampleSet",
                    "KBaseSets.ReadsSet"
                ]
            }
        },
        {
            "id": "adapter_sequence_5P",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": null,
            "field_type": "text",
            "text_options": { }
        },
        {
            "id": "anchored_5P",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": [1],
            "field_type": "checkbox",
            "checkbox_options": {
                "checked_value": 1,
                "unchecked_value": 0
            }
        },
        {
            "id": "adapter_sequence_3P",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": null,
            "field_type": "text",
            "text_options": { }
        },
        {
            "id": "anchored_3P",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": [0],
            "field_type": "checkbox",
            "checkbox_options": {
                "checked_value": 1,
                "unchecked_value": 0
            }
        },
        {
            "id": "error_tolerance",
            "optional": true,
            "advanced": true,
            "allow_multiple": false,
            "default_values": [0.1],
            "field_type" : "text",
            "text_options" : {
                "validate_as": "float",
                "min_float" : 0,
                "max_float" : 1
            }
        },
        {
            "id": "min_overlap_length",
            "optional": true,
            "advanced": true,
            "allow_multiple": false,
            "default_values": [3],
            "field_type" : "text",
            "text_options" : {
                "validate_as": "int",
                "min_int" : 0
            }
        },
        {
            "id": "min_read_length",
            "optional": false,
            "advanced": true,
            "allow_multiple": false,
            "default_values": [50],
            "field_type" : "text",
            "text_options" : {
                "validate_as": "int",
                "min_int" : 1
            }
        },
        {
            "id": "discard_untrimmed",
            "optional": true,
            "advanced": true,
            "allow_multiple": false,
            "default_values": [0],
            "field_type" : "dropdown",
            "dropdown_options" : {
                "options": [
                                {
                                        "value": 0,
                                        "display": "keep reads missing adapter",
                                        "id": "keep_reads",
                                        "ui-name": "keep_reads"
                                },
                                {
                                        "value": 1,
                                        "display": "discard reads missing adapter",
                                        "id": "discard_reads",
                                        "ui-name": "discard_reads"
                                }
                        ]                                           
            }
        }
    ],
    "parameter-groups": [
        {
            "id": "5P",
            "parameters": ["adapter_sequence_5P", "anchored_5P"],
            "optional": true,
            "allow_multiple": false,
            "with_border": true 
        },
        {
            "id": "3P",
            "parameters": ["adapter_sequence_3P", "anchored_3P"],
            "optional": true,
            "allow_multiple": false,
            "with_border": true 
        }
   ],
    "behavior": {
        "service-mapping": {
            "url": "",
            "name": "kb_cutadapt",
            "method": "remove_adapters",
            "input_mapping": [
                {
                    "narrative_system_variable": "workspace",
                    "target_property": "output_workspace"
                },
                {
                    "input_parameter": "input_reads",
                    "target_property": "input_reads",
                    "target_type_transform": "resolved-ref"
                },
                {
                    "input_parameter": "output_object_name",
                    "target_property": "output_object_name"
                },
                {
                    "input_parameter": "5P",
                    "target_property": "five_prime"
                },
                {
                    "input_parameter": "3P",
                    "target_property": "three_prime"
                },
                {
                    "input_parameter": "error_tolerance",
                    "target_property": "error_tolerance"
                },
                {
                    "input_parameter": "min_overlap_length",
                    "target_property": "min_overlap_length"
                },
                {
                    "input_parameter": "min_read_length",
                    "target_property": "min_read_length"
                },
                {
                    "input_parameter": "discard_untrimmed",
                    "target_property": "discard_untrimmed"
                }

            ],
            "output_mapping": [
                {
                    "narrative_system_variable": "workspace",
                    "target_property": "workspace_name"
                },
                {
                    "service_method_output_path": [0,"report_ref"],
                    "target_property": "report_ref"
                },
                {
                    "service_method_output_path": [0,"report_name"],
                    "target_property": "report_name"
                }
            ]
        }
    },

    "job_id_output_field": "docker"
}
